      {
        "type": "image_picker",
        "id": "insta_icon_1",
        "label": "Birds image",
	    "info" : "Size: 300 x 76px"
      }
 
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": {
        "de": "Logo",
        "en": "Logo",
        "es": "Logotipo",
        "fr": "Logo",
        "it": "Logo",
        "ja": "ロゴ",
        "pt-BR": "Logotipo"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "de": "Foto",
            "en": "Image",
            "es": "Imagen",
            "fr": "Image",
            "it": "Immagine",
            "ja": "画像",
            "pt-BR": "Imagem"
          },
		"info": "size: auto x 200px"
        },
	   {
      "type": "text",
      "id": "link",
      "label": "Link",
      "default": "#"
    }
		
      ]
    }
  ]
}
