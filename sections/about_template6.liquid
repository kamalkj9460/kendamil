<div class="about_section4_logo_bar">
<div class="page-width page-width-1102">
  
   {% if section.settings.title != blank  %}
     <h3 class="heading_h3">{{ section.settings.title }}</h3>
   {% endif %}
  
    <div class="insta_icon parallax__element">
           {%- if section.settings.insta_icon_1 != blank -%}
            <div class="flower_img3 parallax__element birds_icon birds_icon1">
              {% comment %}
             <img src="{{ section.settings.insta_icon_1 | img_url:'40x' }}" alt="" />
               {% endcomment %}
              <img src="{{ section.settings.insta_icon_1 | img_url:'master' }}" alt="" />
              
              
            </div>
             {%- endif -%}        

            {%- if section.settings.insta_icon != blank -%}
            <div class="flower_img2 parallax__element cloud_icon">
              {% comment %}
             <img src="{{ section.settings.insta_icon | img_url:'135x' }}" alt="" />
              {% endcomment %}
              
              
              <img src="{{ section.settings.insta_icon | img_url:'master' }}" alt="" />
              
            </div>
             {%- endif -%} 

            {%- if section.settings.insta_icon_1 != blank -%}
            <div class="flower_img3 parallax__element birds_icon birds_icon2">
             {% comment %}
             <img src="{{ section.settings.insta_icon_1 | img_url:'40x' }}" alt="" />
               {% endcomment %}
              <img src="{{ section.settings.insta_icon_1 | img_url:'master' }}" alt="" />
              
            </div>
             {%- endif -%}
     </div>


  {% if section.blocks.size > 0 %}
    <div class="logo_thumb logo-bar{% if section.settings.title_enable %} logo-bar--large{% endif %} abt_mo_logo_slider">
      {% for block in section.blocks %}
        <div class="logo-bar__item{% if section.settings.title_enable %} logo-bar__item--large{% endif %}" {{ block.shopify_attributes }}>
          <div class="logo_height">
            <div class="middle_align">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
          {% if block.settings.image != blank %}
            {{ block.settings.image | img_url: 'x38', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
          {% else %}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>
</div>




{% schema %}
{
  "name": {
    "de": "Logo-Liste",
    "en": "Logo list",
    "es": "Lista de logotipos",
    "fr": "Liste des logos",
    "it": "Elenco loghi",
    "ja": "ロゴリスト",
    "pt-BR": "Lista de logotipos"
  },

  "class": "index-section about_logo_section",
  "max_blocks": 10,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": {
        "de": "Titel",
        "en": "Heading",
        "es": "Título",
        "fr": "En-tête",
        "it": "Heading",
        "ja": "見出し",
        "pt-BR": "Título"
      },
      "default": {
        "de": "Logo-Liste",
        "en": "Logo list",
        "es": "Lista de logotipos",
        "fr": "Liste de logos",
        "it": "Elenco loghi",
        "ja": "ロゴリスト",
        "pt-BR": "Lista de logotipos"
      }
    },
{
      "type": "text",
      "id": "logo_opacity",
      "label": "Logo opacity",
      "default": "0.2",
      "info" : "0.1 to 1"
    },
	{
      "type": "color",
      "id": "logo_bg_color",
      "label": "Background color",
      "default": "#f6faff"
    },
    {
        "type": "image_picker",
        "id": "insta_icon",
        "label": "Cloud image",
	    "info": "Size: 505 x 158px"
