          {% assign count = 0 %}
             {% for product in collections.all.products %} 
                  {%- assign protag = block.settings.product_tag  -%} 
                  {% if product.tags contains protag %}
                      <div class="grid__item pro_box">
                        {% include 'product-card-grid', max_height: max_height %}
