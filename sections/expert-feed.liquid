  }); 
  
});
</script>


{% schema %}
  {
    "name": "Expert feed",
	 "class": "index-section expert_section",
	"max_blocks": 20,
    "settings": [
	{
      "type": "header",
      "content": "Title"
    },
{
      "type": "text",
      "id": "ex_title",
      "label": "Heading"
    },
	{
      "type": "richtext",
      "id": "ex_info",
      "label": "Info"
    },
	{
      "type": "header",
      "content": "Bar Background color"
    },
   {
      "type":"color",
      "id": "background_bar",
      "label": "Background color",
	  "default": "#fdfbf9"
    }
 
],
"blocks": [
    {
      "type": "ex_image",
      "name": "Expert photo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
	      "info": "Size: 540 x 619px"
        },
		
		{
          "type": "text",
          "id": "product_tag",
          "label": "Product Tag"
        },
		{
          "type": "richtext",
          "id": "ex_text",
          "label": "Expert text"
        },
	   {
          "type": "text",
          "id": "ex_name",
          "label": "Expert name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Expert feed",
      "category": "Image"
    }
  ]
  }
