<div class="page-width page-width-1102">
  
   {% if section.settings.title != blank  %}
     <h3 class="heading_h3">{{ section.settings.title }}</h3>
      {% endif %}


  {% if section.blocks.size > 0 %}
    <div class="logo_thumb logo-bar{% if section.settings.title_enable %} logo-bar--large{% endif %} mo_logo_slider">
      {% for block in section.blocks %}
        <div class="logo-bar__item{% if section.settings.title_enable %} logo-bar__item--large{% endif %}" {{ block.shopify_attributes }}>
          <div class="logo_height">
            <div class="middle_align">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
          {% if block.settings.image != blank %}
            {{ block.settings.image | img_url: 'x38', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
          {% else %}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
  
  
  {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}"
          class="btn"
          aria-label="{{ ariaLabel }}">
          {{- section.settings.button_label | escape -}}
        </a>
      {% endif %}
  
</div>

<style>
  div.logo_height{opacity:{{section.settings.logo_opacity}};} 
  
  .press_section{
    background-color:{{section.settings.logo_bg_color}};
  }
</style>

<script>
$(document).ready(function() {
$('.mo_logo_slider').slick({
  slidesToShow: 5,
  slidesToScroll: 1,     
  arrows: true,
  fade: false,
  dots: false,
  infinite: false,
  responsive: [
    {
      breakpoint: 767,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
         draggable: true,	
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1,
         draggable: true,	
      }
    }
    
  ]
});


  
});
</script>

