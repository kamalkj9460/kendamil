<div id="product_information" style="background:{{product.metafields.background_color_p.background_color_p}};">
  <div class="page-width">
    {% if product.metafields.product_information_.product_information_title != blank %}
    <h3 class="heading_h3">{{ product.metafields.product_information_.product_information_title }}</h3>
     {% endif %}
    <div id="accordion_information" class="information_tab">
      {% for value in product.metafields.title.title %} 
      {% if product.metafields.title.title[forloop.index0] != blank %}
       <div class="accordion_title">
         {{ product.metafields.title.title[forloop.index0] }} <span></span>
         </div>
        <div class="content_info">
          {{ product.metafields.info.info[forloop.index0] }}
        </div>    
      
      {% endif %}
      {% endfor %}   
</div>
  </div>
</div>


