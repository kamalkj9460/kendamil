<div class="page-width feature-row maxwidth_none body-setup-full {{ collection.metafields.image_alignment.image_alignment }}_alignbox">
 <div class="small_border_full width_100 height_50 bottom_25" style="background:{{collection.metafields.small_border_color.small_border_color}}"></div>
<div class="large_border_full width_100 height_25 bottom_0" style="background:{{collection.metafields.large_border_color.large_border_color}}"></div>

  <div class="body-setup-img"style="background-color:{{ collection.metafields.background_color.background_color }};"></div>
  {% capture image_layout %}
    <div class="feature-row__item img_item body_text_img">
      {% if collection.metafields.image.image != blank %}
        {%- assign img_url = collection.metafields.image.image | replace: '_1x1.', '_{width}x.' -%}
        {% include 'image-style', image: collection.metafields.image.image, height: 545, wrapper_id: wrapper_id, img_id: img_id %}
        <div id="" class="feature-row__image-wrapper js">
           <div style="padding-top:{{ 1 | divided_by: collection.metafields.image.aspect_ratio | times: 100}}%;">
            <img id=""
                 class="feature-row__image lazyload"
                 src="{{ collection.metafields.image.image }}"
                 data-src="{{ img_url }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ collection.metafields.image.image.aspect_ratio }}"
                 data-sizes="auto"
                 alt="{{ collection.metafields.image.image.alt | escape }}">
          </div>
        </div>

        <noscript>
          {{ collection.metafields.image.image | img_url: '600x600', scale: 2 | img_tag: collection.metafields.image.image.alt, 'feature-row__image' }}
        </noscript>
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  {% endcapture %}

  <div class="feature-row {{ collection.metafields.image_alignment.image_alignment }}_alignbox">
  
    <div class="feature-row__item feature-row__text feature-row__text-- text_item body_text">
      <div class="rte_box">
        
        <div class="icon_setup tag_icon_body">
          <div class="icon_box_svg">
            {% include 'setup-icon' %}
          </div>
        </div>
        <style>
          .icon_setup.tag_icon_body .icon_box_svg::after{
            background:{{ collection.metafields.top_border_color.top_border_color }};
          }
        </style>
        
        
      {% if collection.metafields.title.title != blank %}
        <h2 class="h3">{{ collection.metafields.title.title }}</h2>
      {% endif %}
      {% if collection.metafields.info.info != blank %}
        <div class="rte rte-setting featured-row__subtext">{{ collection.metafields.info.info }}</div>
      {% endif %}
      {% if collection.metafields.button_label.button_label != blank and collection.metafields.button_link.button_link != blank %}
        <a href="{{ collection.metafields.button_link.button_link }}"
          class="btn"
          aria-label="{{ ariaLabel }}">
          {{- collection.metafields.button_label.button_label -}}
        </a>
      {% endif %}
      </div>
    </div>
	
     {{ image_layout }}
  
    
  </div>
  

  
</div>
